<html lang="en"></html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Provinsi</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="me-auto ms-2 mt-2"><a href="/"><i class="fa-solid fa-house fs-3"></i></a></div>
    <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <!-- Form Header -->
        <h3 class="text-center mb-4">Edit Provinsi</h3>

        <!-- Edit Provinsi Form -->
        <form action="/edit-provinsi{{provinsi.id}}" method="post" id="editProvinsiForm">
          <!-- Province Name -->
          <div class="mb-3">
            <label for="provinsiName" class="form-label">Nama Provinsi</label>
            <input type="text" class="form-control" name="provinsiName" placeholder="Nama Provinsi" required>
          </div>

          <!-- Established Date -->
          <div class="mb-3">
            <label for="establishedDate" class="form-label">Tanggal Diresmikan</label>
            <input type="date" class="form-control" name="establishedDate" required>
          </div>

          <!-- Island -->
          <div class="mb-3">
            <label for="island" class="form-label">Pulau</label>
            <input type="text" class="form-control" name="island" placeholder="Pulau Dari Provinsi Tersebut" required>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="provinceImage" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="provinceImage" accept="image/*">
          </div>

          <!-- Edit Provinsi Button -->
          <button type="submit" class="btn btn-primary w-100">Edit Provinsi</button>
        </form>
      </div>
    </div>
    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>